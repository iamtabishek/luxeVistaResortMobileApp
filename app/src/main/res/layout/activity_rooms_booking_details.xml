<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Logo Image at the Top -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/luxevista_logo"
            android:layout_gravity="center"
            android:contentDescription="Logo" />

        <!-- Room Type Name -->
        <TextView
            android:id="@+id/roomNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deluxe Ocean View"
            android:textSize="24sp"
            android:textColor="@color/primary_color"
            android:paddingTop="10dp"
            android:gravity="center"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/roomImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/deluxe_room"
            android:layout_gravity="center" />

        <!-- Room Description -->
        <TextView
            android:id="@+id/roomDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spacious suite with a stunning ocean view, featuring a king-size bed, luxury amenities, and a private balcony."
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/primary_color" />

        <!-- Room Price -->
        <TextView
            android:id="@+id/roomPriceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price: $200 per night"
            android:textSize="18sp"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:textAlignment="viewStart" />

        <!-- Check-in Date Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check-in Date:"
            android:textSize="16sp"
            android:textColor="@color/primary_color"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="viewStart" />

        <!-- Check-in Date Selection -->
        <TextView
            android:id="@+id/checkInDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Check-in Date"
            android:textSize="16sp"
            android:textColor="@color/primary_color"
            android:padding="10dp"
            android:backgroundTint="@color/divider_color"
            android:background="@drawable/edit_text_background"
            android:gravity="center_vertical" />

        <!-- Check-out Date Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check-out Date:"
            android:textSize="16sp"
            android:textColor="@color/primary_color"
            android:paddingTop="8dp"
            android:layout_marginTop="15dp"
            android:textAlignment="viewStart" />

        <!-- Check-out Date Selection -->
        <TextView
            android:id="@+id/checkOutDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Check-out Date"
            android:textSize="16sp"
            android:textColor="@color/primary_color"
            android:padding="10dp"
            android:backgroundTint="@color/divider_color"
            android:background="@drawable/edit_text_background"
            android:gravity="center_vertical" />

        <!-- Calculate Stay Duration -->
        <TextView
            android:id="@+id/totalDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:text="Total Days: 0" />



        <!-- Book Now Button -->
        <Button
            android:id="@+id/bookNowButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/primary_color"
            android:padding="12dp"
            android:layout_gravity="center_horizontal" />

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/secondary_color"
            android:layout_marginTop="0dp"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
